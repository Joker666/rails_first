<!DOCTYPE html>
<html>
  <head>
    <title>Simple CMS | <%= @page_title || 'Admin' %></title>
    <%= stylesheet_link_tag('application', :media => 'all') %>
  </head>
  <body>
    <div id="header">
      <h1>Simple CMS Admin</h1>
    </div>
    <div id="main">
      <% unless flash[:notice].blank? %>
        <div class="notice">
          <%= flash[:notice] %>
        </div>
      <% end %>
      <div id="content">
        <%= yield %>
      </div>
    </div>
    <div id="footer">
      <p id="copyright">&copy; <%= link_to('iTechoid', 'http://itechoid.com') %> / Hasan Rafi</p>
    </div>
  </body>
</html>
